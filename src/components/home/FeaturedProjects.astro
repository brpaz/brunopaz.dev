---
import {SourceProject, ProjectType, mapProject} from '~/api/projects.ts'
import ProjectCard from '~/components/work/list/ProjectCard.astro'
const featuredProjects = Astro.fetchContent<SourceProject>('../../content/projects/*.md')
    .filter(({ featured }) => !!featured)
    .filter(({ type }) => type === ProjectType.Company)
    .map((project) => mapProject(project))
    .sort((a, b) => Number(a.position) - Number(b.position));
---

<section id="tech-stack" class="flex flex-col mx-auto justify-center text-center mb-12">
   <h2 class="font-bold text-neutral-600 text-4xl mb-4 text-center">
      Featured proejcts
   </h2>
   <div class="mb-12">
      <p class="mb-4">
       Some projects I have worked on
      </p>

       <div class="flex flex-wrap w-full justify-center">
            {featuredProjects.map((project) => (
            <div class="flex flex-col md:w-1/2 sm:w-full lg:w-1/3 text-left">
                <ProjectCard project={project}/>
            </div>
            ))}
        </div>

      <a href="/work" class="inline-block text-white bg-primary-400 py-2 px-4 rounded-md hover:text-white hover:bg-primary-500
       ">More projects</a>
   </div>
</section>

