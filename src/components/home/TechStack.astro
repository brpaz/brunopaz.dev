---
import LanguageIcon from '../shared/LanguageIcon.astro';

const languages = [
  'Golang',
  'PHP',
  'JavaScript',
  'TypeScript',
  'NodeJS',
  'Symfony',
  'Postgres',
  'Redis',
  'ElasticSearch',
  'Apache Kafka',
  'NuxtJS',
  'Astro',
  'TailwindCSS',
  'Linux',
  'Git',
  'Docker',
  'Kubernetes',
  'Google Cloud',
  'Ansible',
  'Terraform',
  'Grafana',
  'Prometheus',
  'FluxCD',
  'Strapi',
];
---

<style>
  #tech-stack img {
    margin-left: auto;
    margin-right: auto;
    max-width: 100px;
    width: 100%;
  }

  .language-logo {
    width: 120px;
    height: 120px;
    display: flex;
    align-items: center;
    margin-right: 2rem;
    margin-bottom: 2rem;
    overflow: hidden;
  }
</style>
<section
  id="tech-stack"
  class="flex flex-col mx-auto justify-center text-center mb-12"
>
  <h2 class="font-bold text-neutral-600 text-4xl mb-4 text-center">
    Teck Stack
  </h2>
  <div class="mb-8">
    <p class="mb-4">
      I have experience with a wide range of technologies, and I strongly
      believe in the importance of choosing the right tool for the job.
    </p>
    <p>Here some of my favorites:</p>
  </div>
  <div class="flex flex-col">
    <div class="flex flex-wrap justify-center">
      {
        languages.map((item) => (
          <div title={item} class="language-logo">
            <LanguageIcon name={item} width={100} height={100} />
          </div>
        ))
      }
    </div>
  </div>
</section>
