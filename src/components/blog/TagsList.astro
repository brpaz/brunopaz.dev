---
interface Props {
  tags: string[];
}

const { tags } = Astro.props as Props;
---

<ul class="flex flex-wrap">
  {
    tags.map((tag) => (
      <li class="px-2 py-2 bg-neutral-200 mr-2 rounded-md">
        <a
          class="text-sm font-semibold text-neutral-600 hover:text-neutral-600"
          href={`/blog/tags/${tag}`}
        >
          {tag}
        </a>
      </li>
    ))
  }
</ul>
