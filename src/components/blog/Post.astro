---
import type { CollectionEntry } from 'astro:content';
import type { BlogPost } from '~/content/contentTypes'
import FormattedDate from '~/components/blog/FormattedDate.astro'

interface Props {
  post: CollectionEntry<BlogPost>;
}

const { post } = Astro.props;

const { title, excerpt, publishDate } = post.data;
const url = `/blog/${post.slug}`;

---

<article>
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-4">
    <h2 class="text-xl font-bold flex w-full md:w-4/5 mb-2">
      <a class="text-primary-400 hover:text-primary-600"
         href={url}>{title}</a>
    </h2>

    {publishDate &&
      <div class="text-xs md:text-right">
        <FormattedDate date={publishDate} />
      </div>
    }
  </div>

  <p class="leading-6">
    { excerpt }
  </p>
</article>
