---
import { formatPostDate } from '~/utils/date.ts'

interface Post {
  url: string;
  title: string;
  date: string;
}

interface Props {
  post: Post;
}

const { post } = Astro.props as Post;
---

<article>
  <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-4">
    <h2 class="text-xl font-bold flex w-full md:w-4/5 mb-2">
      <a class="text-primary-400 hover:text-primary-600"
         href={post.url}>{post.title}</a>
    </h2>

    <div class="text-xs md:text-right">{formatPostDate(post.date)}</div>
  </div>

  <p class="leading-6">
    { post.summary }
  </p>
</article>
