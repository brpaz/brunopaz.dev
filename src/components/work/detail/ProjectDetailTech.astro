---
import { getLanguageIconName } from '~/utils/icons.ts'
const { technologies } = Astro.props;
--- 
<div class="project-technologies">

    <h3 class="font-bold text-xl mb-8">Technologies and Tools</h3>
      <div
        class="technologies-list flex justify-center md:justify-start flex-wrap"
      >

      {technologies.map((item) => (
        <div class="mb-8 mr-8 overflow-hidden flex items-center justify-center">
            <img alt={item} title={item} style="width: 96px; height: 96px"
            src={Astro.resolve(`../../../assets/icons/languages/${getLanguageIconName(item)}`)}/>
        </div>
      ))}
</div>    
