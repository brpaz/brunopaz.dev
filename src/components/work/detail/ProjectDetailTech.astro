---
import LanguageIcon from "@components/shared/LanguageIcon.astro";

export interface Props {
  technologies: Array<string>;
}

const { technologies } = Astro.props;
---
<div class="project-technologies">
   <h3 class="font-bold text-xl mb-8">Technologies and Tools</h3>

    <div class="technologies-list flex justify-center md:justify-start flex-wrap">
      {technologies.map((item) => (
        <div class="mb-8 mr-8 overflow-hidden flex items-center justify-center">
          <LanguageIcon width="100" height="100" name={item} />
        </div>
      ))}
    </div>
</div>
