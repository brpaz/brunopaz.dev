    <section id="profile">
      <PageTitle title="About me" />

      <Image
        src={IconWave}
        height="128"
        width="128"
        class="mb-8 mt-8 mx-auto"
        alt="Hi There!"
        title="Hi there!"
      />

      <p class="mb-4">
