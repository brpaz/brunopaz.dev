{
  "name": "@brpaz/brunopazdev",
  "description": "Personal website for Bruno Paz",
  "version": "1.0.3",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "preview": "astro preview",
    "build": "astro build",
    "format:check": "prettier --check src/**/*.{astro,ts,js}",
    "format": "prettier --write src/**/*.{astro,ts,js}",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint src",
    "lint:js:fix": "eslint src --fix",
    "lint:astro": "astro check",
    "lint:md": "markdownlint src/content/**/*.mdx",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright show-report",
    "test:lh": "lhci collect",
    "test:lh:report": "lhci open",
    "prepare": "husky",
    "icons:optimize": "svgo -r --config=svgo.config.js --input=src/assets/icons"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^3.1.9",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@astrojs/tailwind": "^5.1.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@lhci/cli": "^0.15.0",
    "@playwright/test": "^1.53.1",
    "@sarissa/pagination": "^1.0.3",
    "@tailwindcss/typography": "^0.5.16",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.15.32",
    "@typescript-eslint/parser": "^8.34.1",
    "astro": "4.16.18",
    "eslint": "^9.29.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^1.8.3",
    "husky": "^9.1.7",
    "lighthouse-cli": "^0.1.2",
    "lint-staged": "^16.1.2",
    "markdown-it": "^14.1.0",
    "markdownlint-cli": "^0.45.0",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.1.0",
    "@splidejs/splide": "^4.1.4",
    "astro-loading-indicator": "^0.7.0",
    "astro-og-canvas": "^0.7.0",
    "canvaskit-wasm": "^0.40.0",
    "slugify": "^1.6.6"
  }
}