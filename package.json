{
  "name": "@brpaz/brunopazdev",
  "description": "Personal website for Bruno Paz",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "preview": "astro preview --port=3001",
    "build": "astro build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "format:check": "prettier --check src/**/*.{astro,ts,js}",
    "format": "prettier --write src/**/*.{astro,ts,js}",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint src",
    "lint:js:fix": "eslint src --fix",
    "lint:astro": "astro check",
    "lint:md": "markdownlint src/content/**/*.mdx",
    "test": "start-server-and-test preview http://localhost:3001 cy:run",
    "test-perf": "start-server-and-test preview http://localhost:3001 lighthouse-test",
    "optimize-images": "node scripts/optimize-images.mjs",
    "lighthouse-test": "lighthouse http://localhost:3001 --budget-path=./budget.json --output-path=lighthouse-results.html --view",
    "prepare": "husky"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/mdx": "^3.1.5",
    "@astrojs/rss": "^4.0.7",
    "@astrojs/sitemap": "^3.1.6",
    "@astrojs/tailwind": "^5.1.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@sarissa/pagination": "^1.0.3",
    "@typescript-eslint/parser": "^8.5.0",
    "astro": "4.15.4",
    "cypress": "^13.14.2",
    "eslint": "^9.10.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "husky": "^9.1.5",
    "lighthouse": "^12.2.1",
    "lighthouse-cli": "^0.1.2",
    "lint-staged": "^15.2.10",
    "markdown-it": "^14.1.0",
    "markdownlint-cli": "^0.41.0",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "sanitize-html": "^2.13.0",
    "sharp": "^0.33.5",
    "start-server-and-test": "^2.0.7",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.0.21",
    "astro-loading-indicator": "^0.5.0",
    "astro-og-canvas": "^0.5.3",
    "canvaskit-wasm": "^0.39.1",
    "slugify": "^1.6.6"
  }
}
