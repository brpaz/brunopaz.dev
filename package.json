{
  "name": "@brpaz/brunopazdev",
  "description": "Personal website for Bruno Paz",
  "author": {
    "name": "Bruno Paz",
    "email": "info@brunopaz.dev",
    "url": "https://brunopaz.dev"
  },
  "version": "1.5.3",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "preview": "astro preview",
    "build": "astro build",
    "format:check": "prettier --check src/**/*.{astro,ts,js}",
    "format": "prettier --write src/**/*.{astro,ts,js}",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint src",
    "lint:js:fix": "eslint src --fix",
    "lint:astro": "astro check",
    "lint:md": "markdownlint src/content/**/*.mdx",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright show-report",
    "test:lh": "lhci collect",
    "test:lh:report": "lhci open",
    "icons:optimize": "svgo -r --config=svgo.config.js --input=src/assets/icons"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.15",
    "@astrojs/sitemap": "^3.7.0",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "1.56.1",
    "@sarissa/pagination": "^1.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.2.1",
    "@typescript-eslint/parser": "^8.54.0",
    "astro": "^5.17.1",
    "eslint": "^10.0.0",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.5.1",
    "js-yaml": "^4.1.1",
    "lighthouse-cli": "^0.1.2",
    "markdown-it": "^14.1.0",
    "markdownlint-cli": "^0.47.0",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@splidejs/splide": "^4.1.4",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "astro-favicons": "^3.1.5",
    "astro-loading-indicator": "^0.7.1",
    "astro-og-canvas": "^0.10.1",
    "canvaskit-wasm": "^0.40.0",
    "slugify": "^1.6.6"
  }
}
